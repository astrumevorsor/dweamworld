---
import Layout from '../layouts/PageLayout.astro';
import Header from '../components/widgets/Header.astro';
import Hero from '../components/widgets/Hero.astro';
import { DISCORD_LINK } from '../components/constants';

import GameCarouselReact from '~/components/dweam/GameCarouselReact';
import GameGridReact from '~/components/dweam/GameGridReact';

const metadata = {
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero 
    actions={[
      {
        variant: 'primary',
        text: 'Discord',
        href: DISCORD_LINK,
        target: '_blank',
        icon: 'tabler:brand-discord',
      }
    ]}
  >
    <Fragment slot="title">
      Games at your Fingertips
    </Fragment>

    <Fragment slot="subtitle">
      No downloads. No more code. Just neural architectures.
    </Fragment>
  </Hero>

  <GameCarouselReact client:load />
  <div class="mt-16">
    <GameGridReact client:load />
  </div>
</Layout>

