---
import ParamsForm from '~/components/dweam/ParamsForm.jsx';

interface Props {
  gameType: string;
  gameId: string;
}

const { gameType, gameId } = Astro.props;
---

<div class="bg-gray-100 dark:bg-gray-800 p-4 rounded-lg">
  <h2 class="text-xl font-bold mb-4">Parameters</h2>
  <div id="params-panel">
    <ParamsForm 
      client:load 
      gameType={gameType} 
      gameId={gameId} 
    />
  </div>
</div>

<style>
  #params-panel {
    width: 100%;
  }
</style> 